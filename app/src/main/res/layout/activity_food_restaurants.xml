<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodRestaurantsActivity">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FAF9F9"

            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="411dp"
                android:layout_height="233dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/dishback" />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#040303"></View>


            <androidx.cardview.widget.CardView
                android:id="@+id/list1"
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:background="#E4E0E0">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    app:srcCompat="@drawable/burger" />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:paddingLeft="15dp"
                    android:text="CLASSIC WHOOPER"
                    android:textColor="#050505"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/t5"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:paddingLeft="15dp"
                    android:text="Rs 250"
                    android:textColor="#6803FF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/b1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|center_vertical"
                    android:background="#FD0303"
                    android:text="Add"
                    android:textColor="#FFF"
                    android:textStyle="bold"></Button>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/list2"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:background="#E4E0E0">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    app:srcCompat="@drawable/kfc" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:paddingLeft="15dp"
                    android:text="MC CHICKEN"
                    android:textColor="#050505"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/t7"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:paddingLeft="15dp"
                    android:text="Rs 350"
                    android:textColor="#4A03FD"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/b2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|center_vertical"
                    android:background="#FB0303"
                    android:text="Add"
                    android:textColor="#FFF"
                    android:textStyle="bold"></Button>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/list3"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:background="#E4E0E0">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    app:srcCompat="@drawable/pizzahut" />

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:paddingLeft="15dp"
                    android:text="MARGHERITTA"
                    android:textColor="#050505"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/t8"
                    android:layout_width="196dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:paddingLeft="15dp"
                    android:text="Rs 500"
                    android:textColor="#4A03FD"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/b3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|center_vertical"
                    android:background="#FA0202"
                    android:text="Add"
                    android:textColor="#FFF"
                    android:textStyle="bold"></Button>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/list4"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:background="#E4E0E0">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    app:srcCompat="@drawable/dosa" />

                <TextView
                    android:id="@+id/t4"
                    android:layout_width="196dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:paddingLeft="15dp"
                    android:text="DOSA"
                    android:textColor="#050505"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/t9"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:paddingLeft="15dp"
                    android:text="Rs 100"
                    android:textColor="#4A03FD"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/b4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|center_vertical"
                    android:background="#FA0202"
                    android:text="Add"
                    android:textColor="#FFF"
                    android:textStyle="bold"></Button>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>